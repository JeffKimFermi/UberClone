<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gitz.jeff.andrew.uberclone.DriverMapActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customerInfo"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#F5F5F5"
            android:visibility="visible"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            >

            <ImageView
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:onClick="callAssignedCustomer"
                android:id="@+id/callCustomer"
                android:src="@drawable/ic_call_customer"
                android:padding="15sp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="40sp"
                android:paddingRight="40sp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerDestination"
                    android:paddingBottom="5sp"
                    android:paddingTop="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerName"
                    android:paddingBottom="5sp"
                    android:paddingTop="5sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerPhoneNumber"
                    android:paddingBottom="15sp"
                    android:paddingTop="5sp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:id="@+id/customerProfileImage"
                android:src="@drawable/ic_customer_profile_picture"
                android:padding="15sp"/>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/readyForCustomer"
            android:text="Ready for a Customer"
            android:onClick="readyForCustomer"
            android:layout_gravity="bottom"
            android:textAllCaps="false"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="#b45705"
            android:textColor="#ffffff"

            />

    </LinearLayout>

</FrameLayout>
